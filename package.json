{
  "name": "@gkampitakis/mongoDriver",
  "version": "1.0.0",
  "description": "A module for node.js connecting mongodb",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "rimraf dist coverage && npm run lint && jest",
    "dev": "ts-node-dev --respawn --transpileOnly ./dev.ts",
    "build": "rimraf ./lib && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mongodb",
    "mongodbDriver"
  ],
  "author": "Georgios Kampitakis",
  "license": "ISC",
  "dependencies": {
    "@gkampitakis/tslog": "^1.1.0",
    "mongodb": "^3.5.3",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "@types/async": "^3.0.7",
    "@types/jest": "^25.1.2",
    "@types/mongodb": "^3.3.16",
    "@types/node": "^13.7.1",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "^25.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.2.0",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "verbose": true,
    "collectCoverage": false,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
