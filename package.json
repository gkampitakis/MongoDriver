{
	"name": "@gkampitakis/mongo-client",
	"version": "1.2.1",
	"description": "A module for node.js connecting mongodb",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"test": "npm run clean && npm run lint && jest",
		"playground": "ts-node-dev --respawn --transpileOnly ./playground.ts",
		"playground:mongo": "npm run playground -- server",
		"build": "npm run clean && tsc",
		"format": "prettier --write ./src/**/*",
		"lint": "eslint src/**/*.ts",
		"clean": "rimraf ./lib ./coverage",
		"prepublishOnly": "npm run build",
		"benchmarks": "npm run build && node ./benchmarks/index.js",
		"coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
		"release": "semantic-release"
	},
	"keywords": [
		"mongodb",
		"mongo-client",
		"mongo",
		"nodejs mongo client"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"dependencies": {
		"ajv": "^6.12.0",
		"fast-deep-equal": "^3.1.1",
		"flat": "^5.0.0",
		"kareem": "~2.3.1",
		"mongodb": "^3.5.4"
	},
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^8.3.4",
		"@semantic-release/changelog": "^5.0.0",
		"@semantic-release/commit-analyzer": "^8.0.1",
		"@semantic-release/git": "^9.0.0",
		"@semantic-release/npm": "^7.0.5",
		"@semantic-release/release-notes-generator": "^9.0.1",
		"@shelf/jest-mongodb": "^1.1.3",
		"@types/async": "^3.0.8",
		"@types/flat": "^5.0.0",
		"@types/jest": "^25.1.5",
		"@types/mongodb": "^3.5.2",
		"@types/mongoose": "^5.7.3",
		"@types/node": "^13.9.0",
		"@types/pino": "^5.15.5",
		"@typescript-eslint/eslint-plugin": "^2.22.0",
		"@typescript-eslint/parser": "^2.22.0",
		"ascii-table": "0.0.9",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-plugin-import": "^2.20.1",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"mongodb-memory-server": "^6.5.1",
		"mongoose": "^5.9.3",
		"pino": "^5.17.0",
		"pino-pretty": "^3.6.1",
		"prettier": "^1.19.1",
		"pretty-quick": "^2.0.1",
		"rimraf": "^3.0.2",
		"semantic-release": "^17.0.4",
		"ts-jest": "^25.2.1",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.8.2"
	},
	"files": [
		"lib/**/*"
	],
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.(ts|tsx)$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/index.ts",
			"!src/**/*.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"publishConfig": {
		"registry": "https://registry.npmjs.org/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gkampitakis/MongoDriver.git"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	}
}
