{
	"name": "@gkampitakis/mongo-driver",
	"version": "1.2.0",
	"description": "A module for node.js connecting mongodb",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"scripts": {
		"test": "npm run clean && npm run lint && jest",
		"playground": "ts-node-dev --respawn --transpileOnly ./playground.ts",
		"playground:mongo": "npm run playground -- server",
		"build": "npm run clean && tsc",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"lint": "eslint src/**/*.ts",
		"clean": "rimraf ./lib ./coverage",
		"prepublishOnly": "npm run build",
		"benchmarks": "npm run build && node ./benchmarks/index.js",
		"coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls"
	},
	"keywords": [
		"mongodb",
		"mongodbDriver"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"dependencies": {
		"ajv": "^6.12.0",
		"fast-deep-equal": "^3.1.1",
		"flat": "^5.0.0",
		"kareem": "~2.3.1",
		"mongodb": "^3.5.4"
	},
	"devDependencies": {
		"@shelf/jest-mongodb": "^1.1.5",
		"@types/async": "^3.0.8",
		"@types/flat": "^5.0.0",
		"@types/jest": "^25.1.5",
		"@types/mongodb": "^3.5.2",
		"@types/mongoose": "^5.7.3",
		"@types/node": "^13.9.0",
		"@types/pino": "^5.15.5",
		"@typescript-eslint/eslint-plugin": "^2.22.0",
		"@typescript-eslint/parser": "^2.22.0",
		"ascii-table": "0.0.9",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-plugin-import": "^2.20.1",
		"jest": "^25.1.0",
		"jest-sonar-reporter": "^2.0.0",
		"mongodb-memory-server": "^6.3.2",
		"mongoose": "^5.9.3",
		"pino": "^5.17.0",
		"pino-pretty": "^3.6.1",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^25.2.1",
		"ts-node-dev": "^1.0.0-pre.44",
		"typescript": "^3.8.2"
	},
	"files": [
		"lib/**/*"
	],
	"jest": {
		"globals": {
			"ts-jest": {
				"diagnostics": false
			}
		},
		"verbose": true,
		"collectCoverage": true,
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"\\.(ts|tsx)$": "ts-jest"
		},
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"testResultsProcessor": "jest-sonar-reporter",
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx}",
			"!src/**/index.{ts,tsx}",
			"!src/**/*.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		}
	},
	"jestSonar": {
		"reportPath": "coverage",
		"reportFile": "test-report.xml",
		"indent": 4
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/gkampitakis/MongoDriver.git"
	}
}
